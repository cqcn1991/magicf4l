<div class="span8 offset2">
  <% @notes.each do |note| %>
      <div class="note">
     <h3><%= note.title %></h3>
     <%= simple_format note.content %>
      </div>
  <% end %>
</div>

<h1>Listing notes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.content %></td>
    <td><%= note.user_id %></td>
    <td><%= note.public %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

