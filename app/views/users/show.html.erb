<h2 class="cover-micropost-title">我喜欢的</h2>

<%#= image_tag(@user.name) %>
<div class="microposts">
  <div class="row" id="microposts-list">
    <% @microposts.each do |micropost| %>
        <%= link_to micropost do %>
            <%#= link_to micropost.video_url, :target => "_blank" do %>

            <div class="micropost-big span3">

              <%= image_tag(micropost.video_logo_url)  %>

              <div class="info">
                <h5><%= micropost.title %> </h5>
                <% if micropost.user %>
                    <h6>Post by cqcn1991</h6>
                <% else %>
                    <h6>Post by <%= micropost.username %></h6>
                <% end %>
                <div class="like">
                  <% if current_user && current_user.like_for?(micropost) %>
                      <i class="icon-heart icon-heart-red"></i>
                  <% else %>
                      <i class="icon-heart"></i>
                  <% end %>
                  <%= micropost.reputation_for(:likes).to_i %>
                </div>
              </div>
            </div>
        <% end %>

    <% end %>
  </div>
</div>