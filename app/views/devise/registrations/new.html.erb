<div class="signin">
  <h3 >
    <%= link_to user_omniauth_authorize_path(:weibo), class: 'signin-weibo' do %>
      <%= image_tag 'weibo_login.png' %>
    <% end  %>
    或者直接注册：
  </h3>
 <br>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {:class => "form-horizontal"}) do |f| %>
    <div class="control-group">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'textfield' %></div>

    <div class="control-group">
      <%= f.text_field :name, placeholder: '用户名', class: 'textfield' %></div>

    <div class="control-group">
      <%= f.password_field :password, placeholder: '密码', class: 'textfield' %></div>

    <%= devise_error_messages! %>
    <div><%= f.submit "注册", class: 'btn' %></div>
  <% end %>
</div>

<%#= render "devise/shared/links" %>
