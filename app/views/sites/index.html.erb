<div class="header">
  <div class="logo">
    <h1>Cool Sites</h1>
  </div>

  <div class="nav">
    <%= link_to "Shuffle it", shuffle_sites_path %>
    <%= link_to 'New Site', new_site_path if Rails.env.development?  %>
  </div>

</div>

<% if @sites %>
<div class="row sites">
  <% @sites.each do |site| %>
    <div class="span4">
       <%= render site %>
    </div>

  <% end %>


</div>



<% end %>

<%  if Rails.env.development?   %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th>Site url</th>
    <th>Photo url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.title %></td>
    <td><%= site.description %></td>
    <td><%= site.category_id %></td>
    <td><%= site.site_url %></td>
    <td><%= site.photo_url %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% end %>
