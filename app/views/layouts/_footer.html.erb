
<div class="footer-wrapper">
  <div class="container">
    <div class="footer span12">
      <div class="menu">
        <%= link_to "Shuffle", shuffle_microposts_path %>
        <%= link_to "List", index2_microposts_path %>
        <%# if user_signed_in? %>
            <%= link_to "Add", new_micropost_path %>
        <%# end %>
      </div>


      <div class="sign-in pull-right">
        <% if user_signed_in? %>
