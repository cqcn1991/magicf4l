<!DOCTYPE html>
<html>
<head>
  <title>just4Magic - 在这里，发现奇迹</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= csrf_meta_tags %>
  <meta property="wb:webmaster" content="76037d06a69a83b8" />
</head>
<body>

<div class="navbar navbar-inverse navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="">
            <%= link_to 'Just4magic', root_url, class: "brand"  %>
          </li>
          <li class="">
            <%= link_to "发现", microposts_path %>
          </li>
          <li class="">
            <%= link_to "文章", notes_path %>
          </li>
        </ul>

        <ul class="nav pull-right">
          <% if user_signed_in? %>
              <li>
                <%= link_to current_user do %>
                    <%= current_user.name %>
                <% end %>
              </li>

              <li>
                <%= link_to '登出', destroy_user_session_path, method: :delete %>
              </li>
          <% else %>
              <li>
                <%= link_to '申请内测',intro_path %>
              </li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  登陆
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to '微博登陆',user_omniauth_authorize_path(:weibo) %></li>
                    <li><%= link_to '登陆',new_user_session_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to '注册', new_user_registration_path %> </li>
                 </ul>
              </li>
          <% end %>
        </ul>


      </div>

  </div>
  </div>
</div>


<div class="container note-main">
    <div class="row">
        <div class="span6 offset3">
          <%= yield %>
        </div>
</div>



</div>

<%= javascript_include_tag "application" %>
</body>
</html>
