

    <div class="list">
      <% @microposts.each do |micropost| %>
          <div>
              <%= link_to micropost.title, micropost.video_url.presence || micropost.article_url%>
            <div class="pull-right">
              <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
              <i class="icon-heart"></i>
         <span><%= micropost.reputation_for(:likes).to_i %></span>
            </div>

          </div>
      <% end %>
    </div>


<% if current_user %>
<%= link_to 'New Micropost', new_micropost_path %>
<% end %>