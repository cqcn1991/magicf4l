<div class="row">
  <div class="discover_microposts span12">
    <div class="row">
      <div class="note_micropost span8">
        <%= link_to @note, class: 'external' do %>
            <div class="link_info">
                <div class="center_content">
                  <h1 class="title white"><%= @note.title %> </h1>
                  <p class="white"><%= truncate(@note.content, length: 100) %></p>
                </div>
            </div>
        <% end %>
        <div class="info">
              <%= link_to @note.user do %>
                  <h6>Post by <%= @note.user.name  || 'just4magic'  %></h6>
              <% end %>
        </div>
      </div>
      <%= render partial: "discover_microposts", locals: { micropost: @pin_micropost } %>
      <%= link_to '添加', new_micropost_path, class: 'btn-shuffle span4' %>
      <%= render partial: "discover_microposts", collection: @discover_microposts, as: :micropost  %>


    </div>
    <div class="center">
      <%#= will_paginate @discover_microposts, renderer: BootstrapPagination::Rails %>
    </div>
  </div>

</div>

