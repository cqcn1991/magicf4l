$('.shuffle_microposts').fadeOut('slow', function() {
    var div = $('<%= j render('shuffle_microposts') %>').hide();
    $('.shuffle_microposts').replaceWith(div);
    $('.shuffle_microposts').fadeIn('slow');

    $(".jump-to-cover").click(function() {
        $('html, body').animate({
            scrollTop: $(".cover-micropost").offset().top
        }, 800);
    });
});
